<h1>Articles Tagged with <%= @tag.name %></h1>
<ul>
	<% @tag.articles.each do |article| %>
	<li><%= link_to article.title, article_path(article)%></li>
	<%end%>
</ul>
<%= link_to "<< Back To Tag List", tags_url %>
<%= link_to "Delete", tag_url(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %>